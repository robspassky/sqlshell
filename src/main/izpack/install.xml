<installation version="1.0">
  <info>
    <appname>SQLShell</appname>
    <appversion>@SQLSHELL_VERSION@</appversion>
    <appsubpath>clapper.org/sqlshell</appsubpath>
    <authors>
      <author name="Brian M. Clapper" email="bmc@clapper.org"/>
    </authors>
    <url>http://www.clapper.org/software/sqlshell/</url>
    <javaversion>1.5</javaversion>
  </info>

  <guiprefs height="600" resizable="yes" width="800">
    <laf name="looks">
      <os family="windows"/>
      <param name="variant" value="extwin"/>
    </laf>
    <laf name="looks">
      <os family="unix"/>
    </laf>
  </guiprefs>

  <locale>
    <langpack iso3="eng"/>
    <langpack iso3="chn"/>
    <langpack iso3="deu"/>
    <langpack iso3="fra"/>
    <langpack iso3="jpn"/>
    <langpack iso3="spa"/>
    <langpack iso3="rus"/>
  </locale>

  <resources>
    <res id="HTMLLicencePanel.licence" src="@LICENSE@"/>
    <res id="Installer.image" src="@SRC_INSTALL@/sqlshell-logo.png"/>
    <res id="HTMLInfoPanel.info" src="@README@"/>

    <!--
        Default target installation directories are defined in the
        src/install/path_windows.txt and src/install/path_unix.txt files.
    -->

    <res id="TargetPanel.dir.windows" src="@SRC_INSTALL@/path_windows.txt"/>
    <res id="TargetPanel.dir.unix" src="@SRC_INSTALL@/path_unix.txt"/>
    <res id="TargetPanel.dir.macosx" src="@SRC_INSTALL@/path_darwin.txt"/>
    <res id="XInfoPanel.info" src="@SRC_INSTALL@/final_screen.txt"/>
    <res id="ProcessPanel.Spec.xml" src="@SRC_INSTALL@/cleanup.xml"/>

    <!--
        Points to a (deliberately) empty text file. Specifies that native
        look and feel should be used, if at all possible.
    -->
    <res id="useNativeLAF" src="@SRC_INSTALL@/nativelook.txt"/>
  </resources>

  <panels>
    <panel classname="HelloPanel"/>
    <panel classname="HTMLInfoPanel"/>
    <panel classname="HTMLLicencePanel"/>
    <panel classname="TargetPanel"/>
    <panel classname="PacksPanel"/>
    <panel classname="InstallPanel"/>
    <panel classname="ProcessPanel"/>
    <panel classname="XInfoPanel"/>
    <panel classname="FinishPanel"/>
  </panels>

  <packs>
    <pack name="Core" required="yes">
      <description>The sqlshell jar file, binaries, and dependent jars</description>
<!--
      <singlefile src="@TOP_DIR@/LICENSE" target="$INSTALL_PATH/LICENSE.txt"/>
-->
      <singlefile src="@LICENSE@"
                  target="$INSTALL_PATH/LICENSE.html"/>
      <singlefile src="@README@"
                  target="$INSTALL_PATH/README.html"/>
<!--
      <singlefile src="@TOP_DIR@/README" target="$INSTALL_PATH/README.txt"/>
-->

      <singlefile src="@JAR_FILE@"
                 target="$INSTALL_PATH/lib/sqlshell.jar"/>
      <fileset dir="@THIRD_PARTY_JAR_DIR@"
               includes="*.jar"
               targetdir="$INSTALL_PATH/lib"/>

      <singlefile src="@SRC_INSTALL@/sample.cfg"
                 target="$INSTALL_PATH/sample.cfg"/>

      <!-- shell file (Unix only) -->

      <singlefile src="@SRC_INSTALL@/sqlshell.sh"
                  target="$INSTALL_PATH/bin/sqlshell">
        <os family="unix"/>
      </singlefile>
      <parsable targetfile="$INSTALL_PATH/bin/sqlshell">
        <os family="unix"/>
      </parsable>
      <executable targetfile="$INSTALL_PATH/bin/sqlshell"
                  stage="never" os="unix"/>

      <!-- curn.bat (Windows only) -->

      <singlefile src="@SRC_INSTALL@/sqlshell.bat"
                  target="$INSTALL_PATH/bin/sqlshell.bat">
        <os family="windows"/>
      </singlefile>
      <parsable targetfile="$INSTALL_PATH/bin/sqlshell.bat">
        <os family="windows"/>
      </parsable>
      <executable targetfile="$INSTALL_PATH/bin/sqlshell.bat" stage="never"
                  os="windows"/>

      <!-- for cleaning up -->

      <singlefile src="@SRC_INSTALL@/cleanup.sh"
                  target="$INSTALL_PATH/scripts/cleanup.sh">
        <os family="unix"/>
      </singlefile>
      <parsable targetfile="$INSTALL_PATH/scripts/cleanup.sh">
        <os family="unix"/>
      </parsable>
      <executable targetfile="$INSTALL_PATH/scripts/cleanup.sh"
                  stage="never" os="unix"/>

      <singlefile src="@SRC_INSTALL@/cleanup.bat"
                  target="$INSTALL_PATH/scripts/cleanup.bat">
        <os family="windows"/>
      </singlefile>
      <parsable targetfile="$INSTALL_PATH/scripts/cleanup.bat">
        <os family="windows"/>
      </parsable>
      <executable targetfile="$INSTALL_PATH/scripts/cleanup.bat" stage="never"
                  os="windows"/>
    </pack>

    <pack name="Docs" required="no">
      <description>The SQLShell User's Guide and API Docs</description>
      <file src="@API_DOCS_DIR@"
            targetdir="$INSTALL_PATH/docs"/>
      <file src="@DOCS_DIR@/users-guide.html"
            targetdir="$INSTALL_PATH/docs"/>
      <file src="@TOP_DIR@/CHANGELOG"
            targetdir="$INSTALL_PATH/docs"/>
    </pack>

    <pack name="Sources" required="no">
      <description>The sources</description>
      <!--
          KLUDGE: For some reason, the IzPack <fileset> element doesn't
          properly include properties files with @SRC_TOP@/**/*.properties,
          and exclusion via @BUILD_DIR@ doesn't work, either. (It's not quite
          like the Ant <fileset>, no matter what the docs say.) So, we'll
          clean up the incorrectly copied build directory in the final panel.
      -->
      <fileset dir="@TOP_DIR@" targetdir="$INSTALL_PATH/sources">
        <exclude name="**/.svn"/>
        <exclude name="**/.git"/>
        <exclude name="docs/**"/>

        <include name="src/main/izpack/**/*"/>
        <include name="**/*.java"/>
        <include name="**/*.scala"/>
        <include name="**/*.xml"/>
        <include name="**/*.properties"/>
      </fileset>
    </pack>
  </packs>
</installation>
